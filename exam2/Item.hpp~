#ifndef ITEM_HPP
#define ITEM_HPP

#include <string>

class Item {
  std::string name_;
  float price_;
  int nStock_;

public:
  Item(std::string name, float price, int nStock);
  std::string getName(void);
  float getPrice(void);
  int getStock(void);
  void Sell(int nSold);
};

#endif /* ITEM_HPP */
